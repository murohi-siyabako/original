<main class="main">
  <div class="inner">
  </div>
  <header>
    <p class="font">Powered by <a href="https://newsapi.org", class="btn">News API</a></p>
  </header>
  <div class="articles">
    <% @articles["articles"].each do |article| %>
      <div class="article">
        <div class="title">
          <%= link_to article["title"], article["url"] %>
        </div>
        <div class="wrapper">
          <div class="date">
            <%= article["publishedAt"] %>
          </div>
          <div class="source">
            <%= article["source"]["name"]%>
          </div>
          <div class="image">
            <%= image_tag article["urlToImage"] || 'hc-web-2018-news-1-sml-card.jpg.jpg', :size =>'240x160' %>
          </div>
          <div class="content">
            <%= article["description"] %>
          </div >
        </div>
      </div>
    <% end %>
  </div>
</main>
